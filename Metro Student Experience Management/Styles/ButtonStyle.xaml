<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="MagBtnStyle" TargetType="Button">
        <Setter Property="Width" Value="180"/>
        <Setter Property="Height" Value="80"/>
        <Setter Property="Opacity" Value="0.5"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border BorderBrush="AntiqueWhite" BorderThickness="1" x:Name="bd" Height="80" Width="170">
                        <Grid Background="GreenYellow">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="60"/>
                                <RowDefinition Height="20"/>
                            </Grid.RowDefinitions>
                            <Image Grid.Row="0" Source="Images/Management.png"  HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,5,0,0"/>
                            <TextBlock Grid.Row="1" Text="经验值管理" FontSize="11" Foreground="Black" Margin="5,0,0,0"/>
                        </Grid>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="BorderThickness" TargetName="bd" Value="2"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter Property="BorderThickness" TargetName="bd" Value="1"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
